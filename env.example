# ==================================================
# EVE API Configuration
# ==================================================

# OpenAI (REQUIRED - Whisper transcription + GPT-4o for summaries & task extraction)
OPENAI_API_KEY=sk-proj-your_openai_key_here

# ElevenLabs (REQUIRED - Voice synthesis for motivational recaps)
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Google Gemini (REQUIRED - Alternative smart summaries)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Calendar OAuth (REQUIRED - Autonomous task scheduling)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Amplitude (optional - analytics)
AMPLITUDE_API_KEY=your_amplitude_key_here

# Snowflake (optional - conversation storage)
SNOWFLAKE_ACCOUNT=your_account_here # e.g., xy12345.us-east-1
SNOWFLAKE_USER=your_user_here # e.g., your_email@example.com
SNOWFLAKE_PASSWORD=your_password_here # Your Snowflake password
SNOWFLAKE_AUTHENTICATOR=password # Use 'password' for backend services
SNOWFLAKE_ROLE=ACCOUNTADMIN # Or a more restricted role
SNOWFLAKE_DATABASE=your_database_here
SNOWFLAKE_SCHEMA=your_schema_here
SNOWFLAKE_WAREHOUSE=your_warehouse_here

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Amazon Bedrock (optional - for "Vibe Check" feature)
# Option 1: Bearer Token (preferred if you have it)
AWS_BEARER_TOKEN_BEDROCK=YOUR_AWS_BEARER_TOKEN_HERE
# Option 2: Standard AWS Credentials (alternative)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY_HERE
AWS_DEFAULT_REGION=us-east-1 # Or your preferred region
